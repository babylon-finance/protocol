  "dependencies": {
    "@openzeppelin/contracts": "^3.3.0",
    "@openzeppelin/contracts-upgradeable": "^3.4.1",
    "@uniswap/lib": "^4.0.1-alpha",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "https://github.com/hoytech/uniswap-v2-periphery.git#e8c36e5ad5178341cd67f8b0fdb983073428fb6b",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "ethereum-waffle": "^3.0.2",
    "ethers": "^5.0.7",
    "hardhat": "^2.1.2",
    "node-watch": "^0.6.4",
    "superagent": "^6.1.0"
  },
  "scripts": {
    "clean": "rm -rf cache/* && rm -rf artifacts/* && rm -rf ./export/*",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint:contracts": "solhint contracts/**/*.sol",
    "lint:tests": "eslint 'test/**/*.test.js'",
    "compile": "hardhat compile --max-memory 8096 --no-typechain",
    "typechain": "hardhat compile --max-memory 8096",
    "export": "hardhat export --network hardhat --export contracts.json",
    "deploy:hardhat": "hardhat deploy --network hardhat",
    "deploy:mainnet": "hardhat deploy --network mainnet",
    "deploy:rinkeby": "hardhat deploy --network rinkeby",
    "chain": "KEEPER=0x70997970c51812dc3a010c7d01b50e0d17dc79c8 hardhat node --as-network hardhat",
    "test": "hardhat test --network hardhat --max-memory 8096",
    "gas-report": "env REPORT_GAS=1 yarn test",
    "estimate-size": "yarn run hardhat size-contracts --max-memory 8096",
    "coverage": "hardhat coverage --max-memory 8096"
  }
}
